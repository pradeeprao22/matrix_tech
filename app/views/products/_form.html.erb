<%= form_with(model: product) do |form| %>
  
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
  <label>Product Name</label>
  <%= form.text_field :product_name, class: "form-control" %>
  </div>

  <div class="form-group">
  <label>Product Description</label>
  <%= form.text_field :product_description, class: "form-control" %>
  </div>

  <div class="form-group">
  <label>Select Product Brand</label><br>
  <%= form.select(:brand_id, Brand.all.collect {|t| [ t.brand_name, t.brand_id ] }, { :prompt => "Please select brand for product"} , class: "form-control") %>
  </div>
<br>
  <div class="form-group">
    <%= form.submit 'Submit', :class => 'btn btn-success'%>
  </div>
<% end %>
</form>