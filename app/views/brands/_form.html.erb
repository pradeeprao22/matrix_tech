<%= form_with(model: brand) do |form| %>
  
  <div class="form-group">
  <h6>Brand Name</h6>
  <%= form.text_field :brand_name %>
  </div>


  <div class="form-group">
  <h6>Brand Description</h6>
  <%= form.text_field :brand_description %>
  </div>

  <% if brand.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(brand.errors.count, "error") %> prohibited this brand from being saved:</h2>
      <ul>
        <% brand.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
